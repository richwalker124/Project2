    <div class="container">
        <div class="row">
            <div class="col-2 offset-1">
                dont know
            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col s12 m6">
                        <div class="card white">
                            <div  style="padding:2px;" class="card-header purple darken-3 white-text margin-left-3">
                                <form>
                                    <div class="input-field col s12">
                                        <div class="row">
                                            <div class="col-2">
                                                <img style="height:50px; width:50px;display:inline-block"
                                                    src="https://miro.medium.com/max/560/1*MccriYX-ciBniUzRKAUsAw.png">
                                            </div>
                                            <div class="col-10">
                                                <textarea style="display:inline-block" id="textarea1"
                                                    class="materialize-textarea" data-length="140"
                                                    placeholder="  Start an argument here!"></textarea>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <a class="waves-effect waves-light btn-small orange lighten-2 left"><i
                                                        class="material-icons">photo</i></a>
                                            </div>
                                            <div class="col-6">
                                                <button class="btn waves-effect waves-light orange lighten-2 right"
                                                    type="submit" name="action">Post
                                                    <i class="material-icons right">send</i>
                                            </div>
                                        </div>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div id="postContainer">
                            <div class="post">
                                <div class="card">
                                    <div class="postBox card-content">
                                        <div class="row">
                                            <div class="col-2">
                                                <i class="material-icons prefix" style="top:0px!important;">
                                                    <img style="height:45px; width:45px;"
                                                        src="https://miro.medium.com/max/560/1*MccriYX-ciBniUzRKAUsAw.png">
                                                </i>
                                            </div>
                                            <div class="col-10">
                                                <p class="postText" postId="1">This is a post by a person and it has a
                                                    funny statement
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="card-action commentBar">
                                            <i class="flaticon-fire"></i>
                                            <a href="#">Fire</a>
                                            <i class="material-icons prefix">
                                                <div style="height:20px; width: 20px;" class='titanic titanic-trash'>
                                                </div>
                                            </i>
                                            <a href="#">Trash</a>
                                            <i class="material-icons right">comment</i>
                                        </div>
                                    </div>
                                    <div style="padding:10px; margin-top:-25px;" class="card-content">
                                        <div class="enterComment">
                                            <form>
                                                <textarea class="commentTextBox" style="margin-top:6px;" id="textarea2"
                                                    class="materialize-textarea" data-length="140"
                                                    placeholder="  Argue with this person!"
